<div class="actions-header">
  Related stores
  <a class="right" 
      onclick="analytics.viewAllSelected(Denwen.ViewAllType.RelatedStores);"
      style="<%=stores.length > CONFIG['min_entries_for_view_all'] ? '' : 'display:none'%>"
      data-toggle="modal" 
      href="#modal-related-stores">
  	View all
  </a>
</div> <!-- /actions-header -->

<ul class="thumbnails">
   
	<%stores.each(function(store){%>
		<li>
	  	<%=Denwen.JST['stores/store']({store:store, src:'related'})%>
	  </li>
	<%});%>

</ul> <!-- /thumbnails -->

<div class="modal fade" id="modal-related-stores">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Related Stores</h3>
  </div>
  <div class="modal-body">
  
    <ul class="thumbnails">
			<%stores.each(function(store){%>
				<li>
	  			<%=Denwen.JST['stores/store']({store:store, src:'related'})%>
	  		</li>
			<%});%>
  	</ul> <!-- /modal thumbnails -->
		
  </div>
</div> <!-- /modal -->
