
<!-- background -->
<span style="display:block;
              color:#555;
              font-family:Arial,sans-serif;
              padding-top:15px;
              padding-right:15px;
              padding-bottom:15px;
              padding-left:15px;
              background-color:#eeeeee">
  
  <!-- inner box -->
  <table width="640" 
    cellpadding="0" 
    cellspacing="0" 
    align="center" 
    style="display:table;
            border-collapse:collapse;
            margin-left:auto;
            margin-right:auto;
            margin-bottom:0;
            margin-top:0;
            text-align:left;">

    <tbody>
      <tr>
        <td>
          <table width="600" 
            cellpadding="0" 
            cellspacing="0" 
            align="left" 
            style="display:table;
                    border-collapse:collapse;
                    border-spacing:0;
                    float:left">

            <tbody>
            
              <%=yield :header%>
              
              <tr>
                <td style="background: #f8f8f8;
                            text-align:center;
                            padding:0;margin-left:0;
                            margin-right:0;
                            margin-top:0; 
                            -webkit-border-radius: 0 0 5px 5px;
                            -moz-border-radius: 0 0 5px 5px;
                            border-radius: 0 0 5px 5px; 
                            margin-bottom:0" 
                    valign="top">
                  
                  <div>
                    <p style="min-height:33px;
                              margin-left:0;
                              margin-right:0;
                              margin-top:0;
                              margin-bottom:0;
                              padding:0">
                      &nbsp;
                    </p>

                    <%=yield%>
                    
                    <p style="min-height:10px;
                              margin-left:0;
                              margin-right:0;
                              margin-top:0;
                              margin-bottom:0;
                              padding:0">
                      &nbsp;
                    </p>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
  <!-- /inner box -->
    

  <!-- footer -->
  <p style="min-height:35px;
            margin-left:0;
            margin-right:0;
            margin-top:0;
            margin-bottom:0;
            padding:0">
    &nbsp;
  </p>

  <p align="center" 
      style="color:#cccccc;
              font-size:12px;
              line-height:18px;
              margin-top:0;
              margin-bottom:35px;
              padding:0">

    <font face="Arial" color="#ccc">
      This message was sent to you by <%=CONFIG[:name]%>

      <br>
      <a href="javascript:void(0)"
          style="color:#cccccc;text-decoration:none;">
        855 El Camino Real Building 5 #309 Palo Alto CA 94301
      </a>

      <br>
      <a href="<%=settings_url(:src => @source)%>" 
          style="color:#cccccc;text-decoration:none;">
        Click here to change your notification settings.
      </a>
    </font>
  </p>
  <!-- /footer -->

</span>
<!-- /background -->
