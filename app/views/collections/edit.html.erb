<%form_for @collection,:url => "/collections/#{@collection.id}",
	      :html => {:class => '', :id => 'edit_collection'} do |f|%>

  <%=render :partial  => 'input',
            :locals   => {
              :f => f}%>
<%end%>

<%content_for :javascript do%>
  <script type="text/javascript">

    new Denwen.Views.Collections.Edit({
            currentUserJSON : <%=self.current_user.to_json(
                                  :only => [:id,:first_name,:last_name,
                                              :handle])%>,
                     source : '<%=@source%>',
                 productIDs : '<%=@collection.product_ids.join(',')%>',
                         el : $('#container')});

  </script>
<%end%>
