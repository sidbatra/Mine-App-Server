  <div class="blurb">
     Get updated when Mike buys something.
     <a class="btn btn-large btn-red border-box" style="margin-top: 18px; width: 100%;">
       Join <span class="mine">mine</span> now. It"s free.
     </a>
   </div>


  <div class="thumbnail-box">
    <p><%=@purchase.user.first_name%>"s recent purchases:</p>

    <%cache ["v1",@purchase.user,"purchases","preview","loggedout"] do%>
      <%@purchase.user.purchases.by_id.limit(10).each do |purchase|%>
        <%cache ["v1",purchase,"teaser","purchase","loggedout"] do%>
          <div class="thumb">
            <%=image_tag purchase.square_url%>
          </div>
        <%end%>
      <%end%>
    <%end%>

    <%=link_to '<i class="icon-facebook icon-white"></i> '\
                'Log in to see more '\
                '<i class="icon-chevron-right icon-white"></i>',
        fb_auth_path(:src => @origin), 
        :class => "btn btn-facebook"%>
  </div> <!-- /thumbnail-box -->

