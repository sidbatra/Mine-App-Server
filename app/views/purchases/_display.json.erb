<%=object.to_json(
    :only => [:id,:bought_at,:title,:handle,:endorsement,:source_url],
    :methods => [:giant_url,:fb_object_id],
    :include => {
      :user => {
        :only => [:id,:first_name,:last_name,:gender,:handle,:byline],
        :methods => [:square_image_url]},
      :store => {
        :only => [:id,:name]},
      :likes => {
        :only => [:id],
        :include => {
          :user => {
            :only => [:id,:first_name,:last_name,:handle],
            :methods => [:square_image_url]}}},
      :comments => {
        :only => [:id,:message],
        :include => {
          :user => {
            :only => [:id,:first_name,:last_name,:handle],
            :methods => [:square_image_url]}}}})%>
