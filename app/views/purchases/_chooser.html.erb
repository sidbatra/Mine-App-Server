	<div id="chooser" class="chooser border-box" style="display:none;">
				
		<form class="search-bar border-box gradient v-555-444">
		
			<a id="cancel_logo_button" href="javascript:void(0)">
        <%=image_tag("logos/mine-h-white-40-brighter-2x.png", 
            :class => "logo absolute")%>
      </a>
	        
	    <a id="cancel_button" 
        class="close opacity-60-80 absolute alias-smooth transition-opacity" 
        href="javascript:void(0)">
				&times;
			</a>

		
			<div class="search-container relative well-box rounded-8" id="spinner_box" style="padding: 6px; background: #474747;">
				
					<div class="prompt border-box rounded-5-left unselectable">	
						<span class="default">
							Select your
						</span>
						<span class="error">
							Unavailable
						</span>
		      </div>
					
					<input  id="purchase_repeat_query" 
		              class="enter txt l rounded-3 border-box" 
		              name="products[query]" 
		              type="text" 
		              value="">
					<a id="purchase_repeat_search" 
		              class="btn btn-large border-box rounded-3 go shaded" 
		              title="Search"
		              alt="Search">
		      	<span class='hide-when-loading'>
			      	<%=image_tag "icons/PNG-Icons/32px-white/Edition-25-white.png", 
	                :style => "height: 14px; margin-top: 13px; vertical-align: top;"%>
		      	</span>
		      	<i class='icon-loading icon-white'></i>
		      </a>

      </div> <!-- search-container -->  
      
	   	<a href="#help-search" role="button" data-toggle="modal"
	    	class="btn-help dark rounded-4 border-box gradient v-555-444 absolute" 
	    	style="width: 88px; right: 72px; top: 12px;">
	    	Searching<br>
	    	Tips
	    </a>
      
		</form> <!-- /search-bar -->
		
		
		<div class="modal hide rounded-5" style="display: block; z-index: 1000;" id="help-search">
		  <div class="modal-header gradient v-FFF-DDD rounded-5-top">
		    <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
		    <
		  </div>
		  <div class="modal-body" style="text-align: center;">
	      <div class="txt xs" style="margin-top: 8px; color: #999;">
          Quick sign up. Mine never auto-shares.
        </div>
		  </div>
		</div> <!-- /modal -->


		<div class="results border-box" id="results">
    </div>
	
	
		<div class="scroll-instructions txt s gradient v-FFF-DDD" 
      id="scroll_for_more_results">
	      <span class="hide-when-loading">
	      	Scroll down for more 
          <b class="caret opaque"></b>
	      </span>
	      <div class="loading">
        </div>
	  </div>
	  
	</div> <!-- chooser -->
	
	<div class="shadow" id="shadow">
  </div>
