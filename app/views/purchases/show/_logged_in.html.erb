  
  <div class="box-title" style="margin-top: -6px;">
  	Recently purchased by <%=@purchase.user.first_name%>
	  <%=link_to "View all",
        user_path(@purchase.user.handle,:src => 'gallery'), 
        :style => "float: right;"%>
  </div>
  
  <div class="item-row-box border-box rounded-3 shaded" style="margin-bottom: 18px;">

    <%cache ["v3",@purchase.user,"purchases","preview"] do%>
      <%@purchase.user.purchases.with_user.
                  by_id.limit(6).each do |purchase|%>
        <%cache ["v3",purchase,"teaser","purchase"] do%>
          <div id="purchase_thumb_<%=purchase.id%>" class="item">
            <%=link_to image_tag(purchase.square_url, :class => 'item-photo opacity-90-100'),
                	purchase_url(
                  purchase.user.handle,
                  purchase.handle,
                  :src => 'gallery')%>
          </div>
        <%end%>
      <%end%>
    <%end%>

  </div> <!-- /item-row-box -->
  
  <div id="feed" class="feed rounded-5 shaded relative">
	</div>


  <%content_for :javascript do%>
    <script type="text/javascript">
      new Denwen.Views.Purchases.Show({
          purchaseJSON : <%=render :partial => "purchases/display.json.erb",
                              :locals => {:object => @purchase}%>,
          source : '<%=@source%>'});
    </script>
  <%end%>

