  <%=f.hidden_field :suggestion_id, :value => suggestion ? suggestion.id : nil%>
  <%=f.hidden_field :source_url%>
  <%=f.hidden_field :orig_image_url%>
  <%=f.hidden_field :orig_thumb_url%>
  <%=hidden_field_tag 'purchase_product_external_id','',
      :name => 'purchase[product][external_id]'%>
  <%=hidden_field_tag 'purchase_product_title','',
      :name => 'purchase[product][title]'%>
  
	<div id="query_box" 
    class="search-box" 
    style="<%=show_query_box ? '' : 'display:none'%>">
		
    <a id="initiate_purchase" 
        class="btn btn-large btn-red border-box add" 
        style="width: 220px;<%=!show_query_sub_box ? '' : 'display:none;'%>">
      	<span class="mine">+ add</span> to <span class="mine">mine</span>
    </a>

    <div id="query_sub_box" style="<%=show_query_sub_box ? '' : 'display:none'%>">
      <%=f.text_field :query,
          :placeholder => local_assigns[:search_placeholder].nil? ? 
                            "Name, brand, color, store or URL" :
                            search_placeholder,
          :class => "border-box enter-item-name"%>
      <a id="purchase_search" 
          class="btn btn-large btn-red border-box go" 
          alt="Search">
          <%if local_assigns[:search_action].nil?%>
            <span class="hide-on-mobile">Pick a photo </span><i class="icon-chevron-right icon-white"></i>
          <%else%>
            <%=search_action%>
          <%end%>
      </a>
    </div>
	</div> <!-- /query_box.search-box -->

  <div id="extra_steps" 
    class="item clearfix"
    style="<%=show_extra_steps ? '' : 'display: none'%>">
	
    <div class="photo relative border-box">
    
    	<%=image_tag "mine_stamp_54_2x.png",
     			:class => "stamp absolute"%>

      <div class="navigation absolute">
        <a href="javascript:void(0)" 
            class="btn btn-black"
            id="purchase_change_photo">
          <i class="icon-chevron-left icon-white"></i> Change<span class='hide-on-mobile'> photo</span>
        </a>
      </div>
      
	    <%=link_to "<i class='icon-trash icon-white'></i><span class='hide-on-mobile'> Delete item</span>",
	        {:action => 'destroy',:id => f.object.id},
	        :method  => :delete,
	        :class   => 'btn btn-black delete absolute',
	        :confirm => "Are you sure you want "\
	                    "to delete this item?" if show_delete_button%>

      <div id="purchase_selection">
      </div>
      
    </div> <!-- /photo -->
  
  	<div class="panel border-box">
  		
  		<div class="panel-contents border-box">
  
	      <%=f.text_area :title,
	          :rows => nil,
	          :cols => nil,
	          :class => "border-box item-name highlight-on-focus",
	          :placeholder => "Item name",
	          :style => "margin-top: 4px;"%>
			
	      <%=f.text_field :store_name,
	          :class => "border-box store-name highlight-on-focus",
	          :autocomplete => :off,
	          :placeholder => "Store where bought"%>
		          
				<div class="border-box" style="height: 38px; padding: 12px 0 0 8px" id="store_box">
	        <%=f.label :is_store_unknown, 
	            "#{f.check_box(:is_store_unknown,:class => "check absolute")} Not sure",
	            :class => "relative clearfix boder-box"%>
			  </div> 
	
	      <div id="initiate_endorsement" class="btn btn-large add-review">
	        <i class="icon-pencil"></i> Why did you pick this?
	      </div>
					
	      <%=f.text_area :endorsement,
	          :class => "border-box review",
	          :rows => 3,
	          :placeholder => "Why did you pick this?",
	          :style => "display: none;"%>
			  
		    <%if show_fb_share%>
		      <div class="post-to border-box rounded-8">
		        Facebook
	          <a id="fb-photo-toggle-switch" 
	              class="toggle-switch unselectable rounded-5 <%='off' if !fb_share_on%>">
		          <div class="on clearfix rounded-5">
		            <div class="text">
		          		<span class="hide-when-loading">On</span>
		          		<i class="icon-loading icon-white"></i>
		            </div>
		            <div class="knob rounded-5">
		              &nbsp;
		            </div>
		          </div>
		          <div class="off clearfix rounded-5">
		            <div class="knob rounded-5">
		              &nbsp;
		            </div>
		            <div class="text">
		              Off
		            </div>
		          </div>
		        </a>
		      </div>
		    <%end%>

		    <%if show_tw_share%>
		      <div class="post-to border-box rounded-8">
		        Twitter
	          <a id="tw-share-toggle-switch" 
	              class="toggle-switch unselectable rounded-5 <%='off' if !tw_share_on%>">
		          <div class="on clearfix rounded-5">
		            <div class="text">
		              <span class="hide-when-loading">On</span>
		          		<i class="icon-loading icon-white"></i>
		            </div>
		            <div class="knob rounded-5">
		              &nbsp;
		            </div>
		          </div>
		          <div class="off clearfix rounded-5">
		            <div class="knob rounded-5">
		              &nbsp;
		            </div>
		            <div class="text">
		              Off
		            </div>
		          </div>
		        </a>
		      </div>
		    <%end%>
		
		    <%if show_tumblr_share%>
		      <div class="post-to border-box rounded-8">
		      	Tumblr
	          <a id="tumblr-share-toggle-switch" 
	              class="toggle-switch unselectable rounded-5 <%='off' if !tumblr_share_on%>">
		          <div class="on clearfix rounded-5">
		            <div class="text">
		              <span class="hide-when-loading">On</span>
		          		<i class="icon-loading icon-white"></i>
		            </div>
		            <div class="knob rounded-5">
		              &nbsp;
		            </div>
		          </div>
		          <div class="off clearfix rounded-5">
		            <div class="knob rounded-5">
		              &nbsp;
		            </div>
		            <div class="text">
		              Off
		            </div>
		          </div>
		        </a>
		      </div>
		    <%end%>
		
				<button id="submit-button" 
	          type="submit" 
	          class="btn btn-large btn-red border-box"
	          style="width: 100%; margin-top: 16px;">
	          <span class="hide-when-loading">
							<i class="icon-ok icon-white"></i> <%=submit_text%>
						</span>
						<i class="icon-loading icon-white"></i>
				</button> <!-- submit -->
				
		    <%=link_to "Cancel", :back, 
		        :class => "btn btn-large btn-black border-box",
		        :style => "width: 100%; margin-top: 16px;" if show_cancel_button%>
		                          
			</div> <!-- /panel-contents -->                          
	                          
		</div> <!-- /panel -->
		
	</div> <!-- /extra_steps.item -->
