    
    <%if is_current_user(product.user)%>

      <%edit_mode   = false%>
      <%edit_style  = edit_mode ? '' : 'display:none'%>
      <%ui_style    = edit_mode ? 'display:none' : ''%>

      <!-- endorsement editing -->
      
      <%=text_area_tag "product_endorsement",
				          product.endorsement.to_s,
				          :class  => "product_endorsement_input",
				          :style  => edit_style%>
      
	    <%=link_to 	'Cancel', 
	    						'javascript:void(0)',
	    						:id			=> 'product_cancel',
	    						:class  => 'product_endorsement_submit_button',
	    						:style	=> edit_style%>
      
  		<%=link_to 	'Save', 
									'javascript:void(0)',
									:id			=> 'product_update',
									:class  => 'product_endorsement_submit_button',
									:style	=> edit_style%>

      <!-- endorsement display-->
	    <div class='product_endorsement'>
	    
	    	<span id='product_endorsement_text' style='<%=ui_style%>'>
		      <%=h product.endorsement.to_s%>
		    </span>   
	
					<%=link_to 'Edit', 'javascript:void(0)',
											:id			=> 'product_edit',
											:class  => 'edit',
		          				:style 	=> product.endorsement.present? && !edit_mode ?
		                  		    		'' : 
			                      			'display:none'%>            		

	      <!-- endorsement empty-->
	      <%=link_to "Add Your Review",
	                  'javascript:void(0)',
	                  :id     => 'product_edit_initiate',
	                  :class  => 'edit',
	                  :style  => product.endorsement.present? || edit_mode ?
	                              'display:none' :
	                              ''%>
      </div>    

    <%else%>
      <%=h product.endorsement.to_s%>
    <%end%>
  
