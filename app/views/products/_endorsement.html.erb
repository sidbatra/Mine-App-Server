    
    <%if is_current_user(product.user)%>

      <%edit_mode   = source == 'review'%>
      <%edit_style  = edit_mode ? '' : 'display:none'%>
      <%ui_style    = edit_mode ? 'display:none' : ''%>

      <!-- endorsement editing -->
      <%=text_area_tag "product_endorsement",
          product.endorsement.to_s,
          :class  => "box_shadow",
          :style  => edit_style%>

      <%=link_to 	'Update', 
      						'javascript:void(0)',
      						:id			=> 'product_update',
      						:style	=> edit_style%>
      						
      <%=link_to 	' Cancel', 
      						'javascript:void(0)',
      						:id			=> 'product_cancel',
      						:style	=> edit_style%>

      <!-- endorsement display-->
      <span id='product_endorsement_text' style='<%=ui_style%>'>
        <%=h product.endorsement.to_s%>
      </span>

			<%=link_to '<img src="/images/pen_cccccc.png"> Edit', 'javascript:void(0)',
									:id			=> 'product_edit',
          				:style 	=> product.endorsement.present? && !edit_mode ?
                  		    		'' : 
	                      			'display:none'%>        
                   

      <!-- endorsement empty-->
      <%=link_to image_tag('pen_791a10.png') + 
                  " Add your review",
                  'javascript:void(0)',
                  :id     => 'product_edit_initiate',
                  :style  => product.endorsement.present? || edit_mode ?
                              'display:none' :
                              ''%>

    <%else%>
      <%=h product.endorsement.to_s%>
    <%end%>
  
