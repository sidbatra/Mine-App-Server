    
    <%if is_current_user(product.user)%>

      <%edit_mode   = source == 'review'%>
      <%edit_style  = edit_mode ? '' : 'display:none'%>
      <%ui_style    = edit_mode ? 'display:none' : ''%>

      <!-- endorsement editing -->
      <%=text_area_tag "product_endorsement",
          product.endorsement.to_s,
          :class  => "box_shadow",
          :style  => edit_style%>

      <input id='product_update' class='update' value='Update' 
          title='Update' type='button' alt='' 
          style='<%=edit_style%>'>
          
      <input id='product_cancel' class='update_cancel' value='Cancel' 
          title='Cancel' type='button' alt='' 
          style='<%=edit_style%>'>

      <!-- endorsement display-->
      <span id='product_endorsement_text' style='<%=ui_style%>'>
        <%=h product.endorsement.to_s%>
      </span>

      <input id='product_edit' value='â€¹ Edit' title='Edit' 
          type='button' alt='Edit'
          style="<%=product.endorsement.present? && !edit_mode ?
                      '' : 
                      'display:none'%>">        

      <!-- endorsement empty-->
      <%=link_to image_tag('pen_791a10.png') + 
                  " Add your review",
                  'javascript:void(0)',
                  :id     => 'product_edit_initiate',
                  :style  => product.endorsement.present? || edit_mode ?
                              'display:none' :
                              ''%>

    <%else%>
      <%=h product.endorsement.to_s%>
    <%end%>
  
