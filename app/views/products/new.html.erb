
<%=render :partial  => "headers/onboarding",
          :locals   => {:step => 3} if is_onboarding?%>


<div class="container creation">
	<div class="row">
		
		<div class="span6 offset3">
		
		  <%form_for @product,
		      :html => {:class => "well form-horizontal"} do |f|%>
		
		    <%=render :partial  => 'input', 
		        :locals   => {
		          :f                => f,
		          :category         => @category,
		          :placeholders     => @placeholders,
		          :onboarding       => is_onboarding? && @category.name == 'Shoes',
		          :submit_text      => "Add to closet",
		          :show_query_box   => true}%>
		
		  <%end%> <!-- /form -->
		  
		  <div class="alert alert-info" style="margin-top: -10px;">
		    <strong>New!</strong> Add items by URL for the perfect photo every time.
		  </div> <!-- /alert -->
	
		</div> <!-- /span6 -->
		
	</div> <!-- /row -->
</div> <!-- /container -->


<%=render 'chooser'%> 


<%content_for :javascript do%>
  <script type="text/javascript">

    new Denwen.Views.Products.New({
          el            : $('body'),
          source        : '<%=@source%>',
          categoryJSON  : <%=@category.to_json(
                              :only => [:id,:name,:handle,:weight])%>});
  </script>
<%end%>

