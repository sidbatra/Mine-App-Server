<!-- item -->

<%form_for @product, :html => {:multipart => true} do |f|%>

      <%=f.hidden_field :category_id, :value => @category.id%>
      <%=f.hidden_field :source_url%>
      <%=f.hidden_field :orig_image_url%>
      <%=f.hidden_field :orig_thumb_url%>
      <%=f.hidden_field :is_hosted%>
      
	<div class="step">
		<p class="step_title">
      <%=@placeholders[:query]%>
    </p>

    <%=f.text_field :query,
        :value 	=> "",			
        :class    => "creation_input box_shadow creation_search"%><input id="product_search" value="Go" title="Search" type="button" alt="Search">
		
		<p class="step_example">
      <%=@placeholders[:query_eg]%>
    </p>
	</div> <!-- step -->
	
	<div id="product_selection" class="step">
	</div>

  <div id="product_extra" style="display:block">
	
	  <div class="step">
	  	<p class="step_title">
        <%=@placeholders[:title]%>
      </p>

	  	<%=f.text_field :title,
                  :value    => "",
                  :class    => "creation_input box_shadow"%>
	  </div> <!-- step -->
	  
	
	 <!-- store -->
	  <div class="step">
	  	<p class="step_title">
        Store where bought
      </p>

	  	<%=f.text_field :store,
                  :value    => "",
                  :class    => "creation_input box_shadow"%>
	  </div> <!-- store step -->  
	

    <!-- price -->
	  	<div class="step">
		  	<p class="step_title">
	       		Price
        </p>
				
		<div id='creation_dollar'>$</div>
	  	<%=f.text_field :price,
                  :value    => "",
                  :class    => "creation_input creation_price box_shadow"%>

      <%=blocker%>

		</div> <!-- price step -->

    <%=link_to  'Add an optional review', 
                'javascript:void(0)',
                :id    => 'endorsement_initiate',
                :class => 'edit_gray_14'
                %>

	  <div id='endorsement_container' class="step" style='display:none'>
	  	<p class="step_title">
        Review
      </p>

      <%=f.text_area :endorsement,
            :value    => "",
            :class    => "creation_input creation_endorsement box_shadow"%>

	  	<p class="step_example">
        <%=@placeholders[:endorsement_eg]%>
      </p>
	  </div> <!-- step -->

    <%=submit_tag "Add to your closet",
                  :class  => "add_to_closet_button"%>
    
    <%=blocker%>
  
  </div>


<%end%> <!-- form -->

	<div id="chooser" class="shadow_overlay" style="display:none">
      <a id="cancel_button" href="javascript:void(0)"><a>
		<div id="chooser_title_bar">
			Select your 
			<input class="box_shadow creation_search_chooser" id="" name="" type="text" value="">
			<input id="" class="product_search_chooser" value="Go" title="Search" type="button" alt="Search">
		</div>
		<div id="results"></div>
	
		<div id="scroll_for_more_results">
      Scroll down for more &darr;
    </div>
	</div> <!-- chooser -->


  <!-- background shadow -->
  <div id="shadow">
  </div>
	

<%content_for :javascript do%>
  <%=render :partial => "misc/feedback"%>


<script type="text/javascript">

  var productInputView = new Denwen.ProductInputView({el:$('body')});

   $(document).ready(function(){
      var stores = "<%=@stores.map(&:name).join('|')%>".split("|");
      $("#product_store").autocomplete(
                            stores,{
                             formatMatch: function(item){
                              return item[0].replace(/[^\w]/gi, '');},
                             formatResult: function(item){
                              return item[0];}
                             });
    });

  analytics.productNewView(
      <%=@category.id%>,
      "<%=@category.name%>",
      "<%=@source%>");
</script>

<%end%>
