<!-- item -->

<%form_for @product, :html => {:multipart => true} do |f|%>

      <%=f.hidden_field :category_id, :value => @category.id%>
      <%=f.hidden_field :source_url%>
      <%=f.hidden_field :orig_image_url%>
      <%=f.hidden_field :orig_thumb_url%>
      <%=f.hidden_field :is_hosted%>
      
	<div class="step">
		<p class="step_title">
      <%=@placeholders[:query]%>
    </p>

    <%=f.text_field :query,
        :value 	=> "",			
        :class    => "creation_input box_shadow creation_search"%><input id="product_search" value="Go" title="Search" type="button" alt="Search">
		
		<p class="step_example">
      <%=@placeholders[:query_eg]%>
    </p>
	</div> <!-- step -->
	
	<div id="product_selection" class="step rounded">
	</div>

  <div id="product_extra" style="display:block">
	
	  <div class="step">
	  	<p class="step_title">
        <%=@placeholders[:title]%>
      </p>

	  	<%=f.text_field :title,
                  :value    => "",
                  :class    => "creation_input box_shadow"%>
	  </div> <!-- step -->

    <!-- price -->
	  <div class="step">
	  	<p class="step_title">
        How much is it for?
      </p>

	  	<%=f.text_field :price,
                  :value    => "",
                  :class    => "creation_input box_shadow"%>
	  </div> <!-- price step -->

    <!-- store -->
	  <div class="step">
	  	<p class="step_title">
        Which store did you buy it at?
      </p>

	  	<%=f.text_field :store,
                  :value    => "",
                  :class    => "creation_input box_shadow"%>
	  </div> <!-- store step -->
	  
	  <!--div class="step">
	  	<p class="step_title">
        <%=@placeholders[:endorsement]%>
      </p>

      <%=f.text_area :endorsement,
            :value    => "",
            :class    => "creation_input box_shadow creation_endorsement"%>

	  	<p class="step_example">
        <%=@placeholders[:endorsement_eg]%>
      </p>
	  </div--> <!-- step -->

    <%=submit_tag "Save and Share",
                  :class  => "large blue awesome creation_submit_button"%>
  
  </div>


<%end%> <!-- form -->

	

	<div id="chooser" class="shadow_overlay" style="display:none">
      <a id="cancel_button" href="javascript:void(0)"><a>
		<div id="chooser_title_bar">
			Select the item you own
		</div>
		<div id="results"></div>
	
		<div id="scroll_for_more_results">
      Scroll down for more &darr;
    </div>
	</div> <!-- chooser -->


  <!-- background shadow -->
  <div id="shadow">
  </div>
	

<%content_for :javascript do%>
  <%=render :partial => "misc/feedback"%>


<script type="text/javascript">

  var productInputView = new Denwen.ProductInputView({el:$('body')});

   $(document).ready(function(){
      var stores = "<%=@stores.map(&:name).join('|')%>".split("|");
      $("#product_store").autocomplete(stores);
    });

  analytics.productNewView(
      <%=@category.id%>,
      "<%=@category.name%>",
      "<%=@source%>");
</script>

<%end%>
