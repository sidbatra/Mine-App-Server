<%cache ["v7",product,product.store ? product.store : "","card"] do %>

<div class="item">

	<%=image_tag(product.store.favicon_url, 
			:class => "store-icon") if product.store && 
                                  product.store.favicon_url.present?%>

  <%=link_to image_tag(product.giant_url),
      product_path(product.user.handle,product.handle,:src => "profile"),
      :class => "photo-box"%>

  <div class="details">
    <h5>
      <%=h truncate(product.title,:length => 40)%>
    </h5>
    
    <span class="store"><%=h product.store ? product.store.name : ""%></span>
  
  </div>
</div> 

<%end%>
