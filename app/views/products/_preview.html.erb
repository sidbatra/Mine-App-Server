<li>
	<div class="product">
		<div class="product_left">
			<%=link_to image_tag(
			            product.thumbnail_url, 
			            :class => "product_left_image"),
			           product_path(product.id,product.handle)%>
		</div>
		<div class="product_right">
			<p class="product_title">
				<%=truncate product.title, 
							:length 	  => 80, 
							:omissions 	=> "…"%>
			</p>
			<p class="product_endorsement">
				<%=truncate product.endorsement, 
							:length 	  => 100, 
							:omissions 	=> "…"%>
			</p>
   			<div class="product_comment_count">
          <%if product.comments_count != 0%>
            <%=product.comments_count%>
            <%=image_tag "comment_bubble.png", 
                :class => "product_comment_bubble faded"%>
          <%end%>
   			</div>
		</div>
	</div> <!-- product -->
</li>


