
    <!-- item -->
  <div id="container">
  
    <%unless logged_in?%>
      <div id="instructions_1" style="display:block">
        <%=image_tag "instructions_1.png"%>
      </div>
      <div id="instructions_2" style="display:block">
        <%=image_tag "instructions_2.png"%>
      </div>
      <div id="instructions_3" style="display:block">
        <%=image_tag "instructions_3.png"%>
      </div> <!-- instructions -->
    <%end%>
    
    
    <div id="left" class="photo">
      <%=image_tag @product.photo_url,
                    :id => "left_photo"%>
    </div> <!-- left -->

    
    <div id="right">
      <div id="right_content">

          <div id="right_titlebox">
            <%=image_tag @product.user.photo_url, 
                          :id => "user_photo"%>

            <span id="user_name">
              <%=user_share_text(@product.user)%>
            </span><br>

            <span id="item_name">
              <%=@product.title%>
            </span>
          </div> <!--right_titlebox-->

          <div id="right_commentbox">
            <%=image_tag "speechmarks_open.png", 
                          :id => "speechmarks_open"%>
            <span>
              <%=@product.endorsement%>
            </span>

            <%=image_tag "speechmarks_close.png", 
                          :id => "speechmarks_close"%>
          </div> <!--right_commentbox-->

          <%unless logged_in?%>
            <%=image_tag "login_facebook.png", 
                          :class  => "shadow",
                          :id     => "action_button"%>
          <%end%>

      </div> <!-- right_content -->
    </div> <!-- right -->


  </div> <!-- container -->
