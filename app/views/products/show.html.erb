<!-- Generate presenters for the view -->
<%@user_presenter     = presenter_for(@product.user)%>
<%@product_presenter  = presenter_for(@product)%>


<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => @product_presenter.page_title(
                                  @user_presenter.full_name),
              :type         => 'product',
              :description  => @user_presenter.usage_description,
              :url          => @product_presenter.url('fb'),
              :image        => @product_presenter.thumbnail_url}%>
<%end%>


<!-- Welcome box to signup if user is not logged in -->
  <%=render :partial => 'misc/welcome', 
        :locals => {
          :user_presenter => @user_presenter,
          :source         => 'product_' + @product.id.to_s} unless logged_in?%>


  <div id="container">
  
  	<!-- like button for the page -->
    <%=render :partial => 'facebook/like', 
              :locals => {
              	:style				=> 'position: absolute; top: -42px; right: 0px;',
                :url          => @product_presenter.url('fb'),
                :send_button  => true,
                :width        => 378,
                :faces        => false}%>

  
  	<div id="product_section" class="slim_shadow_light">
  	
      <!-- link to closet -->
      <%=@user_presenter.closet_breadcrumb 'product'%>

  		<div class="left_delete">
        <%=@product_presenter.destroy_link%>
      </div>

    
      <!-- navigation to other products -->
      <%unless @next_product.id == @prev_product.id && 
                @next_product.id == @product.id%>

        <%=@product_presenter.next(@prev_product,@product.user)%>
        <%=@product_presenter.prev(@next_product,@product.user)%>
      
      <%end%>
	
	
	    <!-- product -->
      <div>

        <div id="left" class="photo">
          <%=@product_presenter.large_image%>
        </div>

        
        <div id="right">
        
          <div id="right_user_image">
            <%=@user_presenter.large_picture('','product_user')%>
          </div>

          <table id="right_text">
            <tr>
              <td>
                <div id="right_text_div">
                  <%=@user_presenter.bought_text%> <br/>
                    
                  <span class="right_title">
                    <%=h @product_presenter.title%>
                  </span>
                  
                  <br/>
                  
                  <%=@product_presenter.byline%>

                  <div id="right_relativist">
                    <div id="right_extras">
                        <%=render :partial => 'endorsement',
                                  :locals   => {
                                                :source   => @source,
                                                :product  => @product}%>
                    </div> <!--right_extras-->
                  </div> <!--right_relativist-->
                </div>
              </td>
            </tr>
           </table>
           
        </div> <!-- right -->
        
        <%=blocker%>

      </div> <!-- product -->
	      
		</div> <!-- product_section -->
	  
	  <div id="extras">
	  
	  	 <div id='feedback' class='feedback'>
        	<div class='buttons'>
            <a id='like_product' 
                href='javascript:void(0)' 
                class='button hover_shadow_light like'>
                <span class='in'>✓ </span> like
            </a>
            <%unless is_current_user(@product.user)%>
            	<a id='want_product' 
                  href='javascript:void(0)' 
                  class='button hover_shadow_light want'>
                  <span class='in'>✓ </span> want
             	</a>
              <a id='own_product'  
                  href='javascript:void(0)' 
                  class='button hover_shadow_light own'>
                 	<span class='in'>✓ </span> own
                 	
                 	
                 	
                 	<!-- context box -->
                 	<div class='context_box slim_shadow_light'>
                 		<div class='title'>
                 			Store where bought
                 		<span class='option'>
                 			<input class='checkbox' id='' name='' type='checkbox' value='1'>
                 			<label for=''>Unsure</label>
                 		</span>
                 		</div>
                 		<input class='textfield' type='text'>
                 		<div class='title'>
                 			Price 
                 			<span class='option'>
                 				<input class='checkbox' id='' name='' type='checkbox' value='1'>
                 				<label for=''>Gift</label>
                 			</span>
                 		</div>
                 		
                 		<div class='price_container'>
                 			<input class='textfield price' type='text'>
                 			<div class='dollar'>$</div>
                 		</div>
                 		
                 		<input class='button_dark but slim_shadow_light' type='submit' value='Add to your closet ›'>
                 	</div> <!-- context_box -->



              </a>
            <%end%>
          </div>
          <div id='feed_items'>
          </div>
        </div> <!-- feedback -->
	  
	      	
	    <div id="comments_container">
	    
	    	<%if logged_in?%>
	     
		      <div id="add_comment">
			      
			        <%=image_tag self.current_user.photo_url,
			            :class => "comment_photo_self slim_shadow_dark",
			            :alt => ""%>
			
			        <%=text_area_tag "comment_data","Add a comment",
			            :class => "box_shadow" %>
			          
		          <input id="comment_post" class="small_button" 
		                  value="Post" title="Post" type="button" alt=""> 
			      
		        <%=blocker%>
		      </div>
	      
	      <%end%> <!-- comment entry box -->
	
	
	      <div>
          <div id="comments">
          <div>
	        <%=blocker%>
	      </div>
	      
	      <%=blocker%>
	      
	    </div> <!-- comments_container -->
	   
	   </div> <!-- extras -->
	   
	   <%=blocker%>
    
  </div> <!-- container -->



  <%content_for :javascript do%>
    <script type="text/javascript">

      new Denwen.Views.Products.Show({
                        productJSON : <%=@product.to_json(
                                            :only => [:user_id])%>,
                        source      : '<%=@source%>'});

    </script>
  <%end%>

