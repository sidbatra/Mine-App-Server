
    <!-- item -->
  <div id="container">
  
    <%unless logged_in?%>
      <div id="instructions_1" style="display:block">
        <%=image_tag "instructions_1.png"%>
      </div>
      <div id="instructions_2" style="display:block">
        <%=image_tag "instructions_2.png"%>
      </div>
      <div id="instructions_3" style="display:block">
        <%=image_tag "instructions_3.png"%>
      </div> <!-- instructions -->
    <%end%>
    
    
    <div id="left" class="photo">
    	<div class="change_photo dark_button rounded faded">Change photo</div>
      <%=image_tag @product.photo_url,
                    :id => "left_photo"%>
    </div> <!-- left -->

    
    <div id="right">
      <div id="right_content">

          <div id="right_titlebox">
            <%=image_tag @product.user.photo_url, 
                          :id => "user_photo"%>

            <div id="user_name">
              <%=user_share_text(@product.user)%>
            </div>

            <div id="item_name">
              <%=@product.title%>
            </div>
          </div> <!--right_titlebox-->

          <div id="right_commentbox">
          	<div id="speechmarks_open"></div>
            	<div id="user_comment"><%=@product.endorsement%></div>
          	<div id="speechmarks_close"></div>
          </div> <!--right_commentbox-->

          <%unless logged_in?%>
            <%=image_tag "login_facebook.png", 
                          :class  => "shadow",
                          :id     => "action_button"%>
          <%end%>
			<div id="blocker"></div>
      </div> <!-- right_content -->
    </div> <!-- right -->


  </div> <!-- container -->
