<div id="background">
	<img src="/images/home_batch_2.jpg" class="stretch unselectable" />
</div>

<div id="pic_bg" class="fixed_bg">

	<div id='header_onboarding'>
	
		<div class='navbar'>
	
			 <%=image_tag('oncloset_logo_30_white.png', 
			 		:alt => CONFIG[:name],
			 		:class => "logo")%>
			 		
			<ol id='indicators'>
	        <li class='first'></li>
	        <li class='second on'></li>
	        <li class='third'></li>
	    </ol> 		
	
		</div>
	
	</div>

	<div id="container">
		
			<div class="heading">
				Success! Here are a few shoppers<br />
				you're following to get you started.</div>
		      <%=submit_tag '',
		                    :class  => 'add_1st_item',
		                    :name   => nil%>

		  <div id="users">
			  <%@users.each_with_index do |user,i|%>
				  <div class='picker_choice unselectable'>
		
				  		<img src="<%=user.large_photo_url%>" class="left_img">
		
							<div class="right">
								<%=user.first_name + ' ' + user.last_name%>
							</div>
							
							<div class="tiles">
                <%stores = @shoppings[user.id].map(&:store)%>
                <%subset = self.current_user.stores.select{|s| stores.include?(s)}%>

                <%subset[0..3].each do |store|%>
                  <img class="tile" src=<%=store.image_url%> />
                <%end%>
                <%if subset.length <= 3%>
                  <%(stores-subset)[0..(3-subset.length)].each do |store|%>
                    <img class="tile" src=<%=store.image_url%> />
                  <%end%>
                <%end%>
							</div>
			
							<div class="action_bar">
								<b>âœ“</b> Following
							</div>
								<!-- as with following.jst: follow_on, follow_off 
	              <a class='follow_off'></a>-->
	              
				  </div>


            <%content_for :javascript do%>
              <script type="text/javascript">
 /*
                 new Denwen.Partials.Users.Following({
                        el        : $('#following_box_<%=user.id%>'),
                        user_id   : <%#user.id%>,
                        following : <%#@followings[i].to_json%>});
*/
              </script>
            <%end%>

          <%end%>
          



		  </div> <!--users-->

		</div> <!-- box -->
		 
	</div> <!-- container -->
	
</div> <!-- pic_bg -->


<%content_for :javascript do%>

  <script type="text/javascript">
     mpq.track('Onboarding Following View',{
      'source'  : '<%=@source%>'});
  </script>

<%end%>

