<%-if @aspect == :user-%>
  <%-cache @key do-%>
  <%=render :partial => "purchases/purchases",
      :locals => {:purchases => @purchases}%>
  <%-end-%>
<%-elsif @aspect == :special-%>
  <%=render :partial => "purchases/purchases",
      :locals => {:purchases => @purchases,:extra => {:without_interactions => true}}%>
<%-end-%>
