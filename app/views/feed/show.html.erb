<div class="container">

  <div class="col">

    <div class="self-box">
      <%=link_to image_tag(self.current_user.square_image_url),
          user_path(self.current_user.handle,:src => "feed_photo"),
          :class => "user-photo"%>
      <div class="user-name">
        <p>
          <%=link_to self.current_user.full_name,
              user_path(self.current_user.handle,:src => "feed_name")%>
        </p>
      </div>
    </div> <!--self-box-->

    <%=render :partial => "users/ifollowers",
        :locals => {:user => self.current_user,:src => "feed"}%>
    
    <%=render :partial => "users/trinkets",
        :locals => {:src => "feed"}%>
  </div> <!-- col -->

  <div class="col-triple">
    <div id="creation" class="item creation">
      <%form_for Product.new,
          :html => {
            :class => "form-horizontal",
            :style => "margin-bottom: 0;"} do |f|%>
    
        <fieldset>
          <h4 style="font-size: 15px; margin-bottom: 8px;">
            Share a purchase
          </h4>

          <%=render :partial => 'products/input', 
              :locals => {
                :f => f,
                :suggestion => nil,
                :submit_text => "Mine",
                :show_query_box => true,
                :show_extra_steps => false}%>
        </fieldset>
      <%end%> <!-- /form -->
    </div> <!-- /creation -->


    <%=render 'products/chooser'%> 

    <div id="feed" class="feed">
    </div>

  </div> <!-- col-triple-->
      
  <div class="col">
    <!-- Creation tips <br /> -->
  </div>

</div> <!-- container -->

<%content_for :javascript do%>

  <script type="text/javascript">

    new Denwen.Views.Feed.Show({
          source : "<%=@source%>"});
  </script>
<%end%>
