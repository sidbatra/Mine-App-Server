<div class="container" style="width:1200px" id="container">
  <b>
    Recent search history
  </b> 
  <br/><br/>

  <table border="1">
    <tr>
      <td width="200">
        <b>User</b>
      </td>
      <td width="200">
        <b>Created</b>
      </td>
      <td width="250">
        <b>Query</b>
      </td>
      <td width="100">
        <b>Converted?</b>
      </td>
    </tr>
    <tr>
    </tr>
    <%@set.each do |item|%>
      <tr>
        <td>
          <%=link_to user_full_name(item.user),
              admin_user_path(item.user.handle)%>
        </td>
        <td>
          <%=item.created_at.strftime("%Y-%m-%d %H:%M")%>
        </td>
        <td style="overflow:hidden;">
          <%=item.query%>
        </td>
        <td>
          <%if item.is_a? Purchase%>
            <%=link_to item.title,
                admin_purchase_path(item.user.handle,item.handle)%>
          <%else%>
            -
          <%end%>
        </td>
      </tr>
    <%end%>
  </table>

  <br/><br/><br/>
</div>


