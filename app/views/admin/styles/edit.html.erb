
<div id="container" class="container well">
  <legend>Edit style</legend>

  <%form_for @style, 
      :url => "/admin/styles/#{@style.id}" do |f|%>
    <%=render :partial  => "input",
              :locals   => {:f => f,:submit_text => "Update"}%>
  <%end%>

</div>

<%content_for :javascript do%>
  <script type="text/javascript">
    new Denwen.Views.Admin.Styles.Edit({
          el            : $('#container'),
          uploadConfig  : <%=@upload_config.to_json%>});
  </script>
<%end%>
