<div class="container well" id="container">
  <%@buckets.each do |bucket|%>
    <b>
      <%=bucket[:count]%> 
      <%=bucket[:name].capitalize%> Visitors 
      (<%=bucket[:active_count]%> Active) 
    </b> 
    <br/><br/>

    <table>
      <%bucket[:users].each do |user|%>
        <tr>
          <td width="150">
            <%=link_to user_full_name(user),user_path(user.handle)%>
          </td>
          <td width="200">
            <%="joined #{time_ago_in_words(user.created_at)}"%>
          </td>
          <td width="100">
            <%="#{user.purchases_count} items"%>
          </td>
          <td width="200">
            <%="#{truncate(user.email,:length => 50)}"%>
          </td>
          <td width="200">
            <%=link_to 'Admin View',admin_user_path(user.handle)%>
          </td>
        </tr>
      <%end%>
    </table>

    <br/><br/><br/>
  <%end%>
</div>
