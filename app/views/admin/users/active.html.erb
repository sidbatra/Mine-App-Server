<div class="container well" id="container">
  <b>
    <%=@users.count%> <%=h @period%> Visitors (<%=@active_count%> Active)
  </b> 
  <br/><br/>

  <table border="1">
    <tr>
      <td width="150">
        <b>Name</b>
      </td>
      <td width="100">
        <b>Joined</b>
      </td>
      <td width="100">
        <b>Visited</b>
      </td>
      <td width="30">
        <b>Purchases</b>
      </td>
      <td width="200">
        <b>Email</b>
      </td>
      <td width="100">
        <b>Source</b>
      </td>
      <td width="120">
        <b>Link</b>
      </td>
    </tr>
    <tr>
    </tr>
    <%@users.each do |user|%>
      <tr>
        <td>
          <%=link_to user_full_name(user),user_path(user.handle)%>
        </td>
        <td>
          <%=time_ago_in_words(user.created_at)%>
        </td>
        <td>
          <%=time_ago_in_words(user.visited_at)%>
        </td>
        <td>
          <%="#{user.purchases_count}"%>
        </td>
        <td>
          <%="#{truncate(user.email,:length => 50)}"%>
        </td>
        <td>
          <%=h user.source%>
        </td>
        <td>
          <%=link_to 'Admin View',admin_user_path(user.handle)%>
        </td>
      </tr>
    <%end%>
  </table>

  <br/><br/><br/>
</div>
