<div class="container invite" id="container">

  <div class="col">
    &nbsp;
  </div>
  
  <div class="col-triple invite">
  
  	<div class="item">
  	
  		<h4 style="font-size: 15px; margin-bottom: 18px;">
      	Invite friends 
      	<span style="padding-left: 3px; color: #999; font-size: 13px; font-weight: normal;">
      		Your invite will look like this:
      	</span>
      </h4>

		<!-- Preview -->
			
			<div class="thumbnail fb-timeline">
			 	<div style="padding: 11px">
			 	
			 		<div class="user-block">
	          <%=image_tag self.current_user.square_image_url,
	              :class => "user-photo"%>
			 			<strong><%=user_full_name(self.current_user)%></strong><br />
			 			<span style="color: gray;">
	            <%=Time.zone.now.strftime("%B %d")%>
	          </span>
			 		</div> 
			 		
			 		<div class="above-content">
			 			I’d like us to share purchases using Mine — a simple service that tells you when friends buy something interesting.
			 		</div>
			 		
			 		<div class="display-content">
			 			<div class="art-photo" id="friend_image"
			 					 style="background-image: url('');">
			 				<b>M</b>
	          </div>
	          <strong>
	            <div style="margin-bottom: 3px;">
	              Mine - Click to start yours.
	            </div>
	          </strong>
			 			<span style="color: gray;">
			 				Your Mine is a place to log and share purchases with friends. <br />
			 				It’s fun, and totally free. 
			 				<br />		
			 				<br />	 				
			 				Will-You-Be-Mine.com
			 			</span>
			 		</div>
			 		
			 	</div> <!-- padding -->
    
			</div> <!-- /thumbnail -->
		
			<div id="friends_container">
			
				<!-- search box -->
				<div class="control-group" style="margin: 18px 5px 12px;">
			  	<div style="position: relative;">
			
			      <%=text_field_tag 'search_box', 
			          nil, 
			          :placeholder => "Type a friend's name", 
			          :style => 'width: 500px; margin-bottom: 0px;'%>
			
			      <%=link_to  '&times;',
			          'javascript:void(0)',
			          :id    => 'x_button',
			          :class => 'close',
			          :style => "position: absolute; top: 5px; right: 8px; "\
			                    "display: none;"%>
			   	</div>
			  </div>
			  
			  <!-- friends list -->
				<div id="contacts" style="position: relative;">
					<div class="loading large">
					</div>
				</div>
			 
			</div> <!-- friends container -->
			
		</div> <!-- /item -->

	</div> <!-- col triple invite -->

</div> <!-- /container -->

<%content_for :javascript do%>
  <script type="text/javascript">
    new Denwen.Views.Invites.New({
          source  : '<%=@source%>',
         friends  : <%=self.current_user.ifollowers.to_json(
                            :only => [:fb_user_id])%>,
          el      : $('#container')});
  </script>
<%end%>
