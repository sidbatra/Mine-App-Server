<div id="pic_bg" class="fixed_bg">

		<%if is_onboarding?%>
		<div id='header_onboarding'>
		
			<div class='navbar unselectable'>
		
				 <%=image_tag('oncloset_logo_30_white.png', 
				 		:alt => CONFIG[:name],
				 		:class => "logo")%>
				 		
				<ol id='indicators'>
		        <li class='first'></li>
		        <li class='second on'></li>
		        <li class='third'></li>
		    </ol> 		
		
			</div>
		
		</div>
		
	<%else%>
	
		<div class="temporary_redesign_blocker" style="height: 64px">
		</div>
	
	<%end%>

	<div id="container">

			<p class="heading">
				<%if is_onboarding?%>
					Whose closets would you like to see?<br />
					Invite friends you shop with.
				<%else%>
					Invite your friends to OnCloset!<br />
					You'll follow each other automatically.
				<%end%>
			</p>
			
			<div class="new_invite">

				<div class="textfield_title" 
	              id="invite_textfield_title" 
	           style="display:none">
					Search for friends by name:
				</div>
	
				<div class="invite_search_enclosure" id="invite_search_container">
				  <%=text_field_tag 'search_box', 
				                    nil, 
				                    :placeholder => '', 
				                    :class => 'textfield',
				                    :hidden => :true%>
		
		      <%=link_to  '',
		                  'javascript:void(0)',
		                  :id    => 'x_button',
		                  :class => 'x-text',
		                  :style => 'display:none'%>
	      </div>
	      
			
			  <div id="contacts">
			  	<div class="loading" id="loading_spinner">
	          <%=image_tag 'spinner_light_bg.gif'%>
			  	</div>
			  </div>
	
	      <div id='multi_invite_box' style="display:none">
	      
					<%=link_to  '',
		        'javascript:void(0)',
	          :id    => 'invite_backup_button',
	          :class => 'view_friends_list'%>
	
	        <!-- fb multi invite dialog for edge cases -->
	      </div>
      
      </div> <!-- new_invite -->		
       
	</div> <!-- container -->

	<%if is_onboarding?%>	
		<div id='footer_onboarding'>
		  <%=submit_tag '',
		    :class  => 'add_1st_item',
		    :name   => nil%>
		</div>
	<%end%>

</div> <!-- pic_bg -->

<%content_for :javascript do%>
  <script type="text/javascript">
    new Denwen.Views.Invites.New({
                          is_onboarding :<%=is_onboarding?%>,
                          el            :'#container'});
  </script>
<%end%>
