<div class="well finish" id="finish_container" style="display:none">

	<legend>
    Perfect. <span id='friend_name_large'></span>'s OnCloset is ready for them.
  </legend>

	<div class="control-group">
		
		<div class="thumbnail fb-timeline">
		 	<div style="padding: 11px">
		 	
		 		<div class="user-block">
          <%=image_tag self.current_user.photo_url,
              :class => "user-photo"%>
		 			<b><%=user_full_name(self.current_user)%></b><br />
		 			<span style="color: gray;"><%=Time.zone.now.strftime("%B %d")%></span>
		 		</div> 
		 		
		 		<div class="above-content">
		 			I described your style as "<span id='friend_byline'></span>".
		 		</div>
		 		
		 		<div class="display-content">
          <%=image_tag self.current_user.large_photo_url,
              :id     =>  "friend_image",
              :class  => "art-photo"%>
		 			<b>
            <div style="margin-bottom: 3px;">
              <span id='friend_name_small'></span>'s OnCloset
            </div>
          </b>
		 			<span style="color: gray;">
		 				OnCloset is a personal space for your favorite
						items, latest purchases and daily style. It's fun, and free.
		 			</span>
		 		</div>
		 		
		 	</div> <!-- padding -->
		 	
	 		<div class="form-actions" style="margin: 4px 0 0 0; padding-left: 111px;">
        <button id="send_invite" class="btn btn-primary btn-large">
          <i class="icon-envelope icon-white"></i> 
            Send invite
        </button>
        <button class="btn btn-large">
          Cancel
        </button>
        <div class="loading small inline" 
              style="margin-left: 10px; vertical-align: middle;">
        </div>
      </div>
      
		</div> <!-- /thumbnail -->
	</div> <!-- /control-group -->
	
</div> <!-- /finish_container.well -->
