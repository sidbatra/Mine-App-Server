<div class="well styles" id="styles_container" style="display:none">
	<fieldset>
		<legend>
			
	  	<%=link_to "Next <i class='icon-chevron-right'></i>",
	  			  'javascript:void(0)',
		    		:class 		=> 'btn btn-large disabled',
		    		:style    => 'float: right;',
		    		:id    		=> 'styles_picked_button'%>

			Pick your friend's style:
		</legend>
		
		<div class="control-group">
		
			<ul class="thumbnails">
	
	      <%@styles.each do |style|%>
	        <li class="span2">
					  <a id="style_picker_<%=style.id%>"
                class="thumbnail" 
                style="height: 125px;">
	            <%=image_tag style.image_url%>
	            <div class="caption" style="position: relative;">
						    <div class="overflow-fade">
									<i class="icon-ok icon-white" 
                      style="float: right; margin: 50% 6px 0 0; 
                              position: relative; top: -11px;"></i>
								</div>
	              <h5><%=style.title%></h5>
	            </div>
	          </a>
	        </li>
	      <%end%>
	
		  </ul>
	  
	  </div> <!-- /control-group -->
	</fieldset>    
</div> <!-- /styles_container.well -->

