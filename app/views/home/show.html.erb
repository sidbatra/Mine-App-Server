<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "#{CONFIG[:name]} - Share purchases with friends.",
              :type         => 'website',
              :description  => "#{CONFIG[:description]}", 
              :url          => root_url,
              :image        => image_path('mine_100_2x.gif')}%>
<%end%>


<%-content_for :body_attribute do-%>
	<%="class='#{@home}'"-%>
<%-end-%>

<%=render @home%>


<%content_for :javascript do%>

  <script type="text/javascript">
     mixpanel.register_once({"Origin" : "<%=@origin%>"});
     mixpanel.register_once({"Home Page" : "<%=@home%>"});
     mixpanel.track("Home View",{"Source" : "<%=@source%>"});
  </script>
  
  <script src="/javascripts/libs/jquery-1.7.1.js" type="text/javascript"></script>
  <script src="/javascripts/libs/bootstrap.js" type="text/javascript"></script>

<%end%>
