<%-content_for :head do-%>
  <%-cache 'home_og_tags' do-%>
    <%=render :partial  => 'facebook/og',
              :locals   => {
                :title        => "#{CONFIG[:name]} - Share your online closet!",
                :type         => 'website',
                :description  => "Create your own Online Closet! Share the "\
                                  "things you own. Compare with friends. "\
                                  "Express your style!",
                :url          => root_url,
                :image        => image_path('tiles_small_50.jpg')}%>
  <%-end-%>
<%-end-%>

<%-cache [@home,@source,@origin].join('_') do-%>
  <%=render @home%>

  <%-content_for :javascript do-%>
    <script type="text/javascript">
       mpq.register_once({'landed_on' : '<%=@origin%>'});
       mpq.track('landed on homepage',{
        'source'  : '<%=@source%>',
        'origin'  : '<%=@origin%>'});
    </script>
  <%-end-%>
<%-end-%>
