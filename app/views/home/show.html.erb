<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "#{CONFIG[:name]} - Share purchases with friends.",
              :type         => 'website',
              :description  => "#{CONFIG[:description]}", 
              :url          => root_url,
              :image        => image_path('mine_100_2x.gif')}%>
<%end%>


<%-content_for :body_attribute do-%>
	<%="class='#{@home}'"-%>
<%-end-%>

<%=render @home%>


<%content_for :javascript do%>

  <script type="text/javascript">
     mixpanel.register_once({"Origin" : "<%=@origin%>"});
     mixpanel.register_once({"Home Page" : "<%=@home%>"});
     mixpanel.track("Home View",{"Source" : "<%=@source%>"});

    var source = "<%=@source%>";
    if(source.slice(0,6) == 'email_')
      mixpanel.track("Email Clicked",{"Source":source.slice(6,source.length)});

    if(source == 'email_revive') {
      $('#fb-login-main').addClass('load');
      setTimeout(function(){
          window.location.href = "<%=fb_auth_path(:src => @origin)%>";},
          500);
    }
  </script>

<%end%>
