<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "Join me on #{CONFIG[:name]}",
              :type         => 'website',
              :description  => "#{CONFIG[:description]}", 
              :url          => root_url,
              :image        => image_path('On_fb.jpg')}%>
<%end%>


<%-content_for :body_attribute do-%>
	<%="class='#{@home}'"-%>
<%-end-%>

<%=render @home%>


<%content_for :javascript do%>

  <script type="text/javascript">
  
    function index() {
      var index = Math.floor(Math.random()*indexes.length);
      var value = indexes[index];

      indexes.push(previousValue);
      previousValue = value;
      indexes.splice(indexes.indexOf(value),1);

      return value;
    }

    function animate(index) {
      var self = this;
      $('#square_item_' + index).cycle({ 
                                  fx        : 'fade',
                                  speed     : 800,
                                  timeout   : 2500,
                                  pause     : 1,
                                  autostop  : 1,
                                  end       : function() {
                                                self.animate(self.index());
                                              }
                                  });
    }

    function preLoad() {
      var img = new Image();
      img.src = "<%=image_path(
                      'loading_blocks_small_blue_trans.gif')[/[^?]+/]%>";
    }

    $(document).ready(function() {
      preLoad();

      indexes       = [2,3,4];
      previousValue = 1;
      animate(1);
    });
  
     mpq.register_once({'landed_on' : '<%=@origin%>'});
     mpq.register_once({'Campaign' : '<%=@campaign%>'});
     mpq.track('landed on homepage',{
      'source'  : '<%=@source%>',
      'origin'  : '<%=@origin%>'});
  </script>

<%end%>

