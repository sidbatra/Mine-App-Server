<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "#{CONFIG[:name]} - Share purchases with friends.",
              :type         => 'website',
              :description  => "#{CONFIG[:description]}", 
              :url          => root_url,
              :image        => image_path('mine_100_2x.gif')}%>
<%end%>


<%-content_for :body_attribute do-%>
	<%="class='#{@home}'"-%>
<%-end-%>

<%=render @home%>


<%content_for :javascript do%>

	<script src="http://gsgd.co.uk/sandbox/jquery/easing/jquery.easing.1.3.js"></script>
	<script src="http://slidesjs.com/examples/standard/js/slides.min.jquery.js"></script>
	
	<script>
		$(function(){
			$('#slides').slides({
				preload: true,
/* 				preloadImage: 'images/loading-blocks-white-trans.gif', */
				play: 4000,
				pause: 2500,
				hoverPause: true
			});
		});
	</script>

  <script type="text/javascript">
     mixpanel.register_once({"Origin" : "<%=@origin%>"});
     mixpanel.register_once({"Home Page" : "<%=@home%>"});
     mixpanel.track("Home View",{"Source" : "<%=@source%>"});

    var source = "<%=@source%>";
    if(source.slice(0,6) == 'email_')
      mixpanel.track("Email Clicked",{"Source":source.slice(6,source.length)});
  </script>

<%end%>
