<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "#{CONFIG[:name]} - Share your online closet!",
              :type         => 'website',
              :description  => "Create your own Online Closet! Collect the "\
                                "things you own. Compare with friends. "\
                                "Express your style!",
              :url          => root_url,
              :image        => image_path('tile35.jpg')}%>
<%end%>


<%content_for :body_attribute do%>
  <%if @home ==  'girl'%>
    <%="style='overflow:hidden' class='home1'"%>
  <%elsif @home == 'tri'%>
    <%="style='overflow:hidden' class='home2'"%>
  <%elsif @home == 'art'%>
    <%="style='overflow:hidden' class='home3'"%>
  <%elsif @home == 'zendesk'%>
  	<%="style='overflow:hidden' class='home4'"%>
  <%elsif @home == 'gojee'%>
  	<%="style='overflow:hidden' class='home5'"%>
  <%elsif @home == 'gojee1'%>
  	<%="style='overflow:hidden' class='home6'"%>
  <%elsif @home == 'rack'%>
  	<%="style='overflow:hidden' class='home7'"%>
	<%end%>
<%end%>

<%=render @home%>


<%content_for :javascript do%>

  <script type="text/javascript">
     mpq.register_once({'landed_on' : '<%=@origin%>'});
     mpq.track('landed on homepage',{
      'source'  : '<%=@source%>',
      'origin'  : '<%=@origin%>'});
  </script>

<%end%>

