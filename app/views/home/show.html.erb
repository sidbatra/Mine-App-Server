<%content_for :body_attribute do%>
	<%="style='overflow:hidden'"%>
<%end%>

<!-- Inject facebook og tags into the head -->
<%content_for :head do%>
  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "Felvy - Share what you own!",
              :type         => 'website',
              :description  => "Create your own Online Closet! Collect the "\
                                "things you own. Compare with friends. "\
                                "Express your style!",
              :url          => root_url,
              :image        => ''}%>
<%end%>


<%if @layout == "home1"%>
  <%=render "girl"%>
<%else%>
  <%=render "tri"%>
<%end%>


<%content_for :javascript do%>

  <%=render :partial => "misc/feedback"%>

  <script type="text/javascript">
     mpq.register_once({'landed_on' : '<%=@origin%>'});
     mpq.track('landed on homepage',{
      'source'  : '<%=@source%>',
      'origin'  : '<%=@origin%>'});
  </script>

<%end%>

