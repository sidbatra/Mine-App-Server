<%content_for :head do%>
  <%=render :partial => 'misc/meta',
      :locals => {
        :title => "#{CONFIG[:name]} - Tell the world when you buy something great.",
        :description => "Post purchases, perfectly. Share the best stuff in your life. Learn from friends and followers."}%>

  <%=render :partial  => 'facebook/og',
            :locals   => {
              :title        => "#{CONFIG[:name]} - Share purchases with friends.",
              :type         => 'website',
              :description  => "#{CONFIG[:description]}", 
              :url          => root_url,
              :image        => image_path('mine_100_2x.gif')}%>
<%end%>


<%=render @home%>


<%content_for :javascript do%>

  <script type="text/javascript">
     mixpanel.register_once({"Origin" : "<%=@origin%>"});
     mixpanel.register_once({"Home Page" : "<%=@home%>"});
     mixpanel.track("Home View",{"Source" : "<%=@source%>"});

    var source = "<%=@source%>";
    if(source.slice(0,6) == 'email_')
      mixpanel.track("Email Clicked",{"Source":source.slice(6,source.length)});
  </script>

<%end%>
