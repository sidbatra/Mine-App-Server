  <%=render :partial => "misc/feedback"%>

  <script type="text/javascript">
   $(document).ready(function(){
     mpq.register_once({'landed_on' : '<%=@source%>'});
     mpq.track("landed on homepage");
    });
  </script>

<%end%>

