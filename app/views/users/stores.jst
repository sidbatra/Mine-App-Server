<%if(stores.isEmpty()){%>

  <div class="actions-header">
    Which stores do you shop at?
  </div>

  <a href="<%=helpers.newShoppingsPath('placeholder')%>">
  	Add your favorite stores to your closet.
  </a>

<%}else{%>

  <div class="actions-header">
    <%if(helpers.isCurrentUser(user.get('id'))){%> 
      Your stores
    <%} else {%>
      <%=user.get('first_name')%>'s stores
    <%}%>
    <a class="right" 
        onclick="analytics.viewAllSelected(Denwen.ViewAllType.UserStores);"
        data-toggle="modal" 
        href="#modal-user-stores">
  		View all
  	</a>
  </div> <!-- /actions-header -->
  
  <ul class="thumbnails">
	  <%stores.each(function(store){%>
			<li>
	    	<%=Denwen.JST['stores/store']({store:store, src:'user'})%>
	    </li>
	  <%});%>
  </ul> <!-- /thumbnails -->

<%}%>

<div class="modal fade" id="modal-user-stores">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>
    	<%if(helpers.isCurrentUser(user.get('id'))){%> 
      	Your Stores
    	<%} else {%>
      	<%=user.get('first_name')%>'s Stores
    	<%}%>
    </h3>
  </div>
  <div class="modal-body">
  
    <ul class="thumbnails">
		  <%stores.each(function(store){%>
				<li>
		    	<%=Denwen.JST['stores/store']({store:store, src:'user'})%>
		    </li>
		  <%});%>
  	</ul> <!-- /modal thumbnails -->
  	
  </div>
</div> <!-- /modal -->
