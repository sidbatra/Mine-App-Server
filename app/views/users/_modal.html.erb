    <div class="modal hide rounded-5" id="follow_box_modal_<%=user.id%>">
		  <div class="modal-header gradient v-FFF-DDD rounded-5-top">
		    <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
		    <h4>Follow <%=h user.full_name%>'s latest purchases</h4>
		  </div>
		  <div class="modal-body" style="text-align: center;">
		  	
		  	<a href="<%=tw_auth_path(:src => @origin)%>" 
	          onclick="this.className += ' load';"
	          class="btn btn-twitter rounded-3-left relative shaded"
	          style="width: 172px;">
	        <span class='hide-when-loading'>
	          <%=image_tag "social/t-box.png",
	              :class => "t-box"%>
	          Sign in with Twitter
	        </span>
	        <i class='icon-loading icon-white'></i>
	      </a> 	
		  
		    <a href="<%=fb_auth_path(:src => @origin)%>" 
	          onclick="this.className += ' load';"
	          class="btn btn-facebook rounded-3-right relative shaded"
	          style="width: 172px; border-left: 1px solid rgba(0,0,0,0.1);">
	        <span class='hide-when-loading'>
	          <%=image_tag "social/f-box.png",
	              :class => "f-box"%>
	          Sign in with Facebook
	        </span>
	        <i class='icon-loading icon-white'></i>
	      </a> 	
	      
	      <div class="txt xs" style="margin-top: 8px; color: #999;">
          Quick sign up. Mine never auto-shares.
        </div>
      
		  </div>
		</div>
