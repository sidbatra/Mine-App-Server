<div class="actions-header">
	Top Shoppers
	<a class="right" 
      data-toggle="modal" 
      style="<%=users.length > CONFIG['min_entries_for_view_all'] ? '' : 'display:none'%>"
      href="#modal-top-shoppers">
		View all
	</a>
</div>

<ul class="thumbnails">
  <%users.each(function(user){%>
  	<li>
   		<%=Denwen.JST['users/user']({user:user, src:'top_shopper'})%>
   	</li>
  <%});%>
</ul> <!-- /thumbnails -->

