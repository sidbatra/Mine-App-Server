<div class="profile-box unit-box border-box" style="margin-top: -6px;">
       
  <%=render :partial => "box", :locals => {:user => @user}%>
  
  
  <div class="connections-box border-box split" style="margin-right: 2.7%;">

      <div class="box-title relative">
				<a href="javascript:void(0)" class="dark">
          Following (<%=@user.inverse_followings_count%>)
        </a>
			</div>
			
			<ul class="well-box single rounded-5 border-box relative" >
				<%@user.ifollowers.each do |user|%>
					<li class="txt m relative">
						<a href="<%=user_path(user.handle,:src => @aspect)%>" class="dark">
					    <%=image_tag user.square_image_url, 
                  :class => "user-photo m shaded rounded-3"%>
					    <%=user.full_name%>
				    </a>
				    
				    <a class="btn btn-small shaded absolute" 
                id="" 
                style="width: 56px; right: 0; top: 0;">
							<span class="hide-when-loading out">
								Follow
							</span>
							<i class="icon-loading icon-white"></i>
							<span class="in">
								<i class="icon-ok icon-white"></i>
							</span>
						</a>
						
			    </li>
			  <%end%>
      </ul>
      
  </div> <!-- following -->
  
  
  
  <div class="connections-box border-box split">

      <div class="box-title relative">
				<a href="javascript:void(0)" class="dark">
          Followers (<%=@user.followings_count%>)
        </a>
			</div>
			
			<ul class="well-box single rounded-5 border-box relative">
				<%@user.followers.each do |user|%>
					<li class="txt m relative">
						<a href="<%=user_path(user.handle,:src => @aspect)%>" class="dark">
					    <%=image_tag user.square_image_url, :class => "user-photo m shaded rounded-3"%>
					    <%=user.full_name%>
				    </a>
				    
				    <a class="btn btn-small shaded absolute" id="" style="width: 56px; right: 0; top: 0;">
							<span class="hide-when-loading out">
								Follow
							</span>
							<i class="icon-loading icon-white"></i>
							<span class="in">
								<i class="icon-ok icon-white"></i>
							</span>
						</a>
				    
			    </li>
			  <%end%>
      </ul>
      
  </div> <!-- followers -->
  
</div> <!-- /profile-box -->


<%content_for :javascript do%>
  <script type="text/javascript">  
    new Denwen.Views.Users.Connections({
          userJSON : <%=@user.to_json(
                                :only => [:id,:first_name,:last_name,
                                          :handle,:byline])%>,
          source : "<%=h @source%>"});
  </script>
<%end%>
