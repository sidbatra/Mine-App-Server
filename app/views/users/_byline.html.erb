<div id="user_byline_box" class="bio-box absolute">
      <%if is_current_user(user)%>

          <!-- byline editing -->
          <%=text_area_tag 'user_byline',
              self.current_user.byline,
              :class  => 'txt m border-box alias-smooth unresizable',
              :rows   => '1',
              :style  => ""\
                         "#{self.current_user.byline.present? ? 
                              'display:none;' : ''}",
              :placeholder => "About yourself in a sentence..."%>
          
          
          <%=link_to  'Save', 
	            'javascript:void(0)', 
	            :id     => 'user_update',
	            :class  => 'btn btn-small btn-blue absolute',
	            :style  => self.current_user.byline.present? ?
	                        'display:none' :
	                        ''%>   
                     
          
          <!-- byline display -->
          <div id="user_edit_box" 
                class=""
                style="<%=self.current_user.byline.present? ?
                        '' :
                        'display:none'%>">
          
          	<div class="user-bio txt m border-box" id="user_byline_text">
          		<%=h self.current_user.byline%>
          	</div>
          	
          	<%=link_to  'Edit', 
	                      'javascript:void(0)', 
	                      :class  => 'btn btn-small btn-gray absolute',
	                      :id     => 'user_edit',
	                      :style  => self.current_user.byline.present? ?
	                                  '' :
	                                  'display:none'%>
          </div>
          
      <%elsif user.byline.present?%>
					<div class="user-bio txt m border-box">
            <%=h user.byline%>
         </div>
      <%end%> 
</div>
