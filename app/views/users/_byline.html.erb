<div id="user_byline_box">
      <%if is_current_user(user)%>

          <!-- byline editing -->
          <%=text_area_tag 'user_byline',
              self.current_user.byline,
              :class  => 'user-bio border-box',
              :rows   => '2',
              :style  => "width: 100%; padding: 7px; margin-top: 3px;"\
                         "#{self.current_user.byline.present? ? 
                              'display:none;' : ''}",
              :placeholder => "What's your style?"%>
          
          <%=link_to  'Save', 
                      'javascript:void(0)', 
                      :id     => 'user_update',
                      :class  => 'btn',
                      :style  => self.current_user.byline.present? ?
                                  'display:none' :
                                  ''%>                        
          
          <!-- byline display -->
          <div id="user_edit_box" 
                class=""
                style="<%=self.current_user.byline.present? ?
                        '' :
                        'display:none'%>">
          
          	<div class="user-bio" id="user_byline_text">
          		<%=h self.current_user.byline%>
          	</div>
          	
          	<%=link_to  '<i class="icon-pencil icon-white"></i> Edit', 
	                      'javascript:void(0)', 
	                      :class  => 'btn btn-black',
	                      :id     => 'user_edit',
	                      :style  => self.current_user.byline.present? ?
	                                  '' :
	                                  'display:none'%>
          </div>
          
      <%elsif user.byline.present?%>
					<div class="user-bio">
            <%=user.byline%>
         </div>
      <%end%> 
</div>
