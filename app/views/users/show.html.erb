<%content_for :head do%>
  <%=render :partial  => "facebook/og",
            :locals   => {
              :title        => "#{@user.full_name}'s Mine",
              :type         => "link",
              :description  => CONFIG[:description],
              :url          => user_url(@user.handle,:src => 'fb'),
              :image        => image_path('mine_100_2x.gif')}%>
<%end%>

<div class="profile-box unit-box border-box fixed">

  <div class="user-box border-box rounded-3 alias-smooth relative">
  
    <%=image_tag @user.square_image_url,
        :class => "user-photo xxl rounded-3"%>
        
    <div class="user-name absolute">
    	<%=h @user.full_name%>
    </div>

    <div id="follow-box">
    </div>

    <%=render :partial => "byline",
       :locals => {:user => @user}%>

       
  </div> <!-- /user-box -->
  





	<!-- Following -->
  <%cache ["v7",@user,"followers","profile"] do%>
    <div class="connections-box border-box split" style="margin-right: 2.7%;">

      <div class="box-title relative" style="z-index: 0;">
				Following (<%=@user.followings_count%>)
			</div>
			
			<ul class="rounded-3 border-box relative">

	      <%@user.ifollowers.limit(7).each do |user|%>
	        <%cache ["v4",user,"ifollower","profile"] do%>     
	        
		        <li class="pic s">
		        	<a style="display: block;" href="<%=user_path(user.handle,:src => "profile")%>"
	        			rel="tooltip"
	        			title="<%=user.full_name%>">
	        			
			      		<%=image_tag user.square_image_url,:class => "user-photo m shaded rounded-3"%>
			      	</a>
		        </li>
	              
	        <%end%>
	      <%end%>
      
      </ul>
      
    </div> <!-- /connections-box -->
  <%end unless @user.followings_count.zero?%>
  
  
  <!-- Followers -->
  <%cache ["v7",@user,"ifollowers","profile"] do%>
    <div class="connections-box border-box split">

      <div class="box-title relative" style="z-index: 0;">
				Followers (<%=@user.inverse_followings_count%>)
			</div>
			
			<ul class="rounded-3 border-box relative">

	      <%@user.ifollowers.limit(7).each do |user|%>
	        <%cache ["v4",user,"ifollower","profile"] do%>     
	        
		        <li class="pic s">
		        	<a style="display: block;" href="<%=user_path(user.handle,:src => "profile")%>"
	        			rel="tooltip"
	        			title="<%=user.full_name%>">
	        			
			      		<%=image_tag user.square_image_url,:class => "user-photo m shaded rounded-3"%>
			      	</a>
		        </li>
 
	        <%end%>
	      <%end%>
      
      </ul>
      
    </div> <!-- /connections-box -->
  <%end unless @user.inverse_followings_count.zero?%>
	
</div> <!-- /profile-box -->



<div class="box-title profile-feed-title relative">
	<%=is_current_user(@user) ? "Your" : "#{@user.first_name}'s"%> items
</div>

<div class="profile-feed rounded-3 shaded relative">
  <%cache ["v4",@user,"purchases"] do%>
    <%=render :partial => "purchases/card",
        :collection => @user.purchases.with_store.with_user.by_id,
        :as => :purchase%>
  <%end%>
</div> 



<%content_for :javascript do%>

  <script type="text/javascript">  

    new Denwen.Views.Users.Show({
          userJSON        : <%=@user.to_json(
                                :only => [:id,:first_name,:last_name,
                                          :handle,:byline,:followings_count,
                                          :purchases_count,
                                          :inverse_followings_count])%>,
          followingJSON   : <%=@following.to_json(
                                :only => [:id,:user_id, :is_active,
                                            :follower_id])%>,
          source          : "<%=h @source%>"});

  </script>
<%end%>

