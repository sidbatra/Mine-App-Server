<%content_for :head do%>
  <%=render :partial  => "facebook/og",
            :locals   => {
              :title        => "#{@user.full_name}'s Mine",
              :type         => "link",
              :description  => CONFIG[:description],
              :url          => user_url(@user.handle,:src => 'fb'),
              :image        => image_path('mine_100_2x.gif')}%>
<%end%>

<div class="profile-box unit-box border-box fixed">

  <!--<div class="photo-box relative">
    <div class="border absolute">
    </div>

    <#=image_tag @user.large_image_url,
        :class => "user-photo"%>
  </div>  /photo-box -->
  
  <!--<div class="text-box">
		<div class="user-name">
      <#=h @user.full_name%>
      <br/>
    </div>

    <#=render :partial => "byline",
        :locals => {:user => @user}%>
	</div>  /text-box -->


	<!-- Following -->
  <%cache ["v7",@user,"ifollowers","profile"] do%>
    <div class="connections-box border-box" style="display: inline-block; width: 48.65%;">

      <div class="box-title relative" style="z-index: 0;">
				Following (12)
			</div>
			
			<ul class="rounded-3 border-box relative">

	      <%@user.ifollowers.limit(7).each do |user|%>
	        <%cache ["v4",user,"ifollower","profile"] do%>     
	        
	        	<a href="<%=user_path(user.handle,
	        			:src => "profile",
	        			:rel => "tooltip",
	        			:title => user.full_name)%>">
	        			
		        	<li class="pic s">
			          <%=image_tag user.square_image_url,:class => "user-photo m shaded rounded-3"%>
		          </li>
	          </a>
	              
	        <%end%>
	      <%end%>
      
      </ul>
      
    </div> <!-- /connections-box -->
  <%end unless @user.inverse_followings_count.zero?%>
  
  
  <!-- Followers -->
  <%cache ["v7",@user,"ifollowers","profile"] do%>
    <div class="connections-box border-box" style="display: inline-block; width: 48.65%; float: right;">

      <div class="box-title relative" style="z-index: 0;">
				Followers (94)
			</div>
			
			<ul class="rounded-3 border-box relative">

	      <%@user.ifollowers.limit(7).each do |user|%>
	        <%cache ["v4",user,"ifollower","profile"] do%>     
	        
	        	<a href="<%=user_path(user.handle,
	        			:src => "profile",
	        			:rel => "tooltip",
	        			:title => user.full_name)%>">
	        			
		        	<li class="pic s">
			          <%=image_tag user.square_image_url,:class => "user-photo m shaded rounded-3"%>
		          </li>
	          </a>
	              
	        <%end%>
	      <%end%>
      
      </ul>
      
    </div> <!-- /connections-box -->
  <%end unless @user.inverse_followings_count.zero?%>
	
</div> <!-- /profile-box -->



<div class="box-title feed-title relative">
	Your feed
</div>

<div class="feed rounded-3 shaded relative">
  <%cache ["v4",@user,"purchases"] do%>
    <%=render :partial => "purchases/card",
        :collection => @user.purchases.with_store.with_user.by_id,
        :as => :purchase%>
  <%end%>
</div> 



<%content_for :javascript do%>

  <script type="text/javascript">  

    new Denwen.Views.Users.Show({
          userJSON        : <%=@user.to_json(
                                :only => [:id,:first_name,:last_name,
                                          :handle,:byline,:followings_count,
                                          :purchases_count,
                                          :inverse_followings_count])%>,
          source          : "<%=h @source%>"});

  </script>
<%end%>

