<div class="well-box padded border-box rounded-8 relative">

	<h2>View your recent purchases, automagically</h2>
	
	<p class="txt m border-box">
		Pick the email you use for Amazon, iTunes, etcâ€¦
	</p>
	
	<div style="padding: 12px 0 22px;">
	
		<a id="google_connect_button"
		   class="btn btn-large btn-silver shaded rounded-3-left inline-block" 
		    href="javascript:void(0)" 
		    style="width: 30%;"
        rel="tooltip"
        title="Gmail or Google Apps account"
        data-placement="bottom">
		  <%=image_tag "logos/email-gmail-logo-30.png",
		      :class => "hide-when-loading"%>
		  <i class="icon-loading icon-white"></i>
		</a>
		
		<a id="hotmail_connect_button"
        onclick="$('#hotmail_connect').slideToggle('fast');$('#hotmail_email').phocus()"
		    class="btn btn-large btn-silver shaded square inline-block" 
		    style="width: 30%; border-left: 1px solid #ababab; 
          border-left: 1px solid rgba(0,0,0,0.16);"
        rel="tooltip"
        title="Hotmail, Outlook.com, Live or MSN account"
        data-placement="bottom">
		  <%=image_tag "logos/email-hotmail-logo-30.png",
		      :class => "hide-when-loading"%>
		  <i class="icon-loading icon-white"></i>
		</a>
		
		<a id="yahoo_connect_button"
		    class="btn btn-large btn-silver shaded rounded-3-right inline-block" 
		    href="javascript:void(0)" 
		    style="width: 30%; border-left: 1px solid #ababab; 
          border-left: 1px solid rgba(0,0,0,0.16);"
        rel="tooltip"
        title="Yahoo, sbcglobal.net, att.net, verizon.net, bellsouth.net, swbell.net or ameritech.net account"
        data-placement="bottom">
		  <%=image_tag "logos/email-yahoo-logo-30.png",
		      :class => "hide-when-loading"%>
		  <i class="icon-loading icon-white"></i>
		</a>

    <%=render :partial => "hotmail/auth_dialog"%>
		
	</div>


	<div class="txt s">
		Mine revives e-receipts in your inbox. No emails are stored.
		<a style="float: right;" class="opacity-80-100 transition-opacity" 
        href="<%=root_path(:src => 'skip')%>">
			Skip
		</a>
	</div>
      

</div> <!-- /well-box -->


<%content_for :javascript do%>
  <script type="text/javascript">
    new Denwen.Views.Welcome.Connect({
          successURL: "<%=welcome_path(WelcomeFilter::History,:mode => 'live')%>"});
  </script>
<%end%>

