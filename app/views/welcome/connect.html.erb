
<div class="well-box padded border-box rounded-8 relative">
  <div class="email-action-box relative">		
    <span class="txt m top-line opacity-80">
      Import purchases automagically via your inbox.
    </span>
    <br>
    <a class="txt s bottom-line opacity-80-100 transition-opacity" href="/">
      Learn more
    </a>
    <a id="google_connect_button"
       class="btn btn-small btn-silver shaded rounded-3 absolute" 
        href="javascript:void(0)" 
        style="width: 15%; top: 12px; right: 16.61%;">
      <%=image_tag "logos/email-google-logo-18.png",
          :class => ""%>
    </a>
    <a id="yahoo_connect_button"
        class="btn btn-small btn-silver shaded rounded-3 absolute" 
        href="javascript:void(0)" 
        style="width: 15%; top: 12px; right: 0;">
      <%=image_tag "logos/email-yahoo-logo-18.png",
          :class => ""%>
    </a>
  </div>
</div>


<%content_for :javascript do%>
  <script type="text/javascript">
    new Denwen.Views.Welcome.Connect({
          successURL: "<%=welcome_path(WelcomeFilter::History,:mode => 'live')%>"});
  </script>
<%end%>
