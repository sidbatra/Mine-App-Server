<%=render :partial  => "headers/onboarding"%>

<div class="container">
	<div style="width: 891px; margin: 0 24px 0 25px;">
		<div class="well share">
			<fieldset>
				<legend style="margin-bottom: 0; padding-bottom: 18px;">
					<%=link_to "Start your Closet "\
                      "<i class='icon-chevron-right icon-white'></i>",
                    user_path(self.current_user.handle),
						        :class => 'btn btn-large btn-primary',
						        :style => 'float: right;'%>
						        
					Your closet syncs beautifully with Facebook Timeline.
          <div style="color: #999; font-size: 13px; line-height: 18px;">
          	You can adjust your sharing preferences under settings.
          </div>          
				</legend>
				
				<div style="width:856px; margin-left: -2px;">
          <%share_placeholders(self.current_user).each do |image|%>
            <%=image_tag "placeholders/welcome_share/" + image,
                :style => "float: left;"%>
          <%end%>
				</div>
				
			</fieldset>    
		</div> <!-- /well share -->
  </div> <!-- /891px -->
</div> <!--/container -->


<%content_for :javascript do%>
  <script type="text/javascript">
    analytics.shareViewOnboarding();
  </script>
<%end%>
