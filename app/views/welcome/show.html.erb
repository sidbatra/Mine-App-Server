<div class="steps">
	<div class="container">
	
		<div class="title">
			Welcome to Mine, 
      <span class="name"><%=self.current_user.first_name%></span>. <br />
			<span style="color: #ccc;">You'll be sharing in seconds.</span>
		</div>
	
		<div class="squares clearfix">
		
			<div class="square text light">
				Add friends to see what they buy and where they shop.
			</div>
			<div class="rectangle">
				<%=image_tag "home_mine/intro/"\
                      "intro1-#{user_gender(self.current_user)}.jpg"%>
			</div>
			
			<div class="rectangle">
				<%=image_tag "home_mine/intro/"\
                      "intro2-#{user_gender(self.current_user)}.jpg"%>
			</div>
