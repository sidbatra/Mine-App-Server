  <!-- Navbar
    ================================================== -->

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
        
          <%=link_to_if !is_onboarding?,
              CONFIG[:name],
                logged_in? ? 
                  user_path(self.current_user.handle,:src => "top") : 
                  home_path(
                  @origin && @origin != "direct" ? @origin : "",
                  :src => "top"),
                  :class => "brand" %>
                    
          <div class="nav-collapse">
            <ul class="nav pull-right">
              
              <%if !logged_in?%>
            
                <li>
                  <%=link_to "Log In",
                      fb_auth_path(
                        :src    => @origin ? @origin : "login",
                        :target => request.request_uri),
                        :id => "action_link" %>
                </li>
              
              <%else%>
                
                <li>
                  <a href="<%=new_invite_path(:src => 'bar')%>">Invite friends</a>
                </li>
                <li class="user-cell">
                  <a style="white-space: nowrap; display: block; padding-right: 10px;" href="<%=is_onboarding? ? 
                              "javascript:void(0)" : 
                              user_path(self.current_user.handle,:src => 'bar')%>">
                     <%=image_tag self.current_user.square_image_url, 
                                :class => "avatar",
                                :alt => ""
                                %>
                    <%=user_full_name(self.current_user)%>
                  </a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                  	<li>
                      <%=link_to "Settings", 
                        settings_path%>
                    </li>
                    <li>
                      <%=link_to "Log out", 
                        logout_path%>
                    </li>
                  </ul>
                </li>
              
              <%end%>
              
            </ul> <!-- /nav -->
          </div> <!-- /nav-collapse -->
        </div> <!-- /container -->
      </div> <!-- /navbar-inner -->
    </div> <!-- /navbar navbar-fixed-top -->


