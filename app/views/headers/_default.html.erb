<%if logged_in? && !is_onboarding?%>

	<div class="header hide-on-mobile">
		<div class="navigation relative border-box">
			
	    <%=link_to image_tag("mine_78_2x.png", :class => "logo"),
	        root_path(:src => "bar")%>
	
	      <div class="btn-group" style="float: right; margin-top: 15px;">
	
	        <a href="<%=user_path(self.current_user.handle,:src => "bar")%>"
	            class="btn btn-large btn-white btn-user relative" 
	            style="float: left;">
	            <%=image_tag self.current_user.square_image_url,
	                :class => "self-photo absolute"%>
	            <%=h self.current_user.full_name%>
	        </a>
	        
	        <%=link_to "<i class='icon-home'></i>", 
	        		root_path(:src => "bar-icon"),
	        		:class => "btn btn-large btn-white"%>
	
          <a class="btn btn-large btn-white dropdown-toggle" 
            style="float: right;" 
            data-toggle="dropdown">
            <i class="icon-chevron-down"></i>
          </a>

          <ul class="dropdown-menu">
            <li><%=link_to "Settings",settings_path(:src => "bar")%></li>
            <li><%=link_to "Log Out",logout_path%></li>
          </ul>
	
	      </div> <!-- /btn-group -->
	      
		</div> <!-- /navigation -->
	</div> <!-- /header -->
	
	
	<!-- Mobile header (same as logged-out) -->
	
  <div class="logged-out hide-except-mobile" style="padding: 0 10px;">	
		<div class="item-header">
	      
	    <%=link_to image_tag("mine_54_horizontal_2x.png", :class => "logo"),
	        root_path(:src => "bar")%>
		        
		  <span class="text">
				Tell friends when you buy good stuff.
		  </span>
		  	        
		</div>
	</div> 
	
	<!-- /mobile header -->

	
<%end%>
