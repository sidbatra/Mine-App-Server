<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
    
      <%=link_to CONFIG[:name].upcase,
          root_path(:src => "bar"),
          :class => "brand"%>
                
      <div class="nav-collapse">
        <%if logged_in?%>
          <ul class="nav pull-right">
            <li>
              <%=link_to "Invite friends",new_invite_path(:src => "bar")%>
            </li>
            <li class="user-cell">
              <%=link_to image_tag(self.current_user.square_image_url,
                          :class => "avatar") + self.current_user.full_name,
                  user_path(self.current_user.handle,:src => "bar"),
                  :style => "white-space: nowrap; display: block; "\
                            "padding-right: 10px;"%>
            </li>
            <li class="dropdown">
              <a href="javascript:void(0)" 
                  class="dropdown-toggle" 
                  data-toggle="dropdown">
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%=link_to "Settings",settings_path(:src => "bar")%>
                </li>
                <li>
                  <%=link_to "Log Out",logout_path%>
                </li>
              </ul>
            </li>
          </ul> <!-- /nav -->
        <%end%>
      </div> <!-- /nav-collapse -->
    </div> <!-- /container -->
  </div> <!-- /navbar-inner -->
</div> <!-- /navbar navbar-fixed-top -->

