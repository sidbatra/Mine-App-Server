
<div id="pic_bg">

	<div id="container narrow">

  <%form_for @settings,:url => "/settings/#{@settings.id}",
        :html => {
          :class  => '',
          :id     => 'edit_setting'} do |f|%>

      <div class='step'>
      
        <div id='' class=''>
          <%=f.check_box :post_to_timeline%>
          <%=f.label :post_to_timeline,"Post to Facebook Timeline"%>
        </div>


        <%=blocker%>

        <%=submit_tag "",
                      :class  => '',
                      :name   => nil%>
                          
        <%=blocker%>
      </div> 
  <%end%>

	</div> <!-- container -->
   
</div> <!-- pic_bg -->


<%content_for :javascript do%>

  <script type="text/javascript">
    new Denwen.Views.Settings.Index({
          el            : $('edit_setting'),
          source        : '<%=@source%>'});
  </script>

<%end%>
