# Apache settings for multiple rails application
# running on the server

NameVirtualHost *:80

  PassengerPoolIdleTime 0
  PassengerMaxPoolSize 6

<VirtualHost *:80>

  # Admin email, Server Name (domain name) and any aliases
  ServerName  closet.com

  # Index file and Document Root (where the public files are located)
  DocumentRoot /vol/closet/current/public
  RailsEnv production
  PassengerMinInstances 3

  <Directory /vol/closet/current/public>
       AllowOverride all      
       Options -MultiViews

       RewriteEngine on
       RewriteCond %{HTTP_HOST} www.oncloset.com
       RewriteRule ^(.*)$ http://oncloset.com/$1 [L,R=permanent]

    <FilesMatch "\.(ico|eot|svg|ttf|woff)$">
       FileETag none
    </FilesMatch>
  </Directory>

  <ifModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault A0

    <FilesMatch "\.(ico|eot|svg|ttf|woff)$">
     ExpiresDefault "access plus 1 year"
    </FilesMatch>
  </ifModule>

  # Custom log file productions
  LogLevel warn
  ErrorLog  /vol/closet/current/log/error.log
  CustomLog /vol/closet/current/log/access.log combined

</VirtualHost>


<VirtualHost *:443>

  # Admin email, Server Name (domain name) and any aliases
  ServerName  closet.com

  # Index file and Document Root (where the public files are located)
  DocumentRoot /vol/closet/current/public
  RailsEnv production
  PassengerMinInstances 3

  <Directory /vol/closet/current/public>
       AllowOverride all      
       Options -MultiViews

       RewriteEngine on
       RewriteCond %{HTTP_HOST} www.oncloset.com
       RewriteRule ^(.*)$ https://oncloset.com/$1 [L,R=permanent]
  </Directory>

  # Custom log file productions
  LogLevel warn
  ErrorLog  /vol/closet/current/log/error.log
  CustomLog /vol/closet/current/log/access.log combined
  SSLEngine on
  SSLCertificateFile /vol/closet/current/private/ssl/oncloset.com.crt
  SSLCertificateKeyFile /vol/closet/current/private/ssl/oncloset.com.key
  SSLCertificateChainFile /vol/closet/current/private/ssl/gd_bundle.crt
</VirtualHost>


