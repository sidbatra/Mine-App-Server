
  # Solr
  check process solr with pidfile /vol/mine/current/solr/pids/production/sunspot-solr-production.pid
    start program = "/bin/bash -c 'cd /vol/mine/current && RAILS_ENV=production RAILS_PATH=/vol/mine/current /usr/local/bin/rake sunspot:solr:start'" with timeout 30 seconds
    stop program = "/bin/bash -c 'cd /vol/mine/current && RAILS_ENV=production RAILS_PATH=/vol/mine/current /usr/local/bin/rake sunspot:solr:stop'" 
