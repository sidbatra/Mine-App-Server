							<!-- Notifications -->
							
							<h4 style="font-size: 15px; margin-bottom: 18px;">Notifications</h4>
							
							<div class="control-group">
								<label class="control-label" style="width: 80px;">Activity</label>
								<div class="controls" style="margin-left: 100px;">
